{
  "name": "api-design",
  "version": "1.0.0",
  "description": "Training to design a Node.js API",
  "main": "index.js",
  "scripts": {
    "dev": "env-cmd .env babel-watch src/index.js",
    "build": "babel src/index.js -d build",
    "start": "node build/index.js",
    "precommit": "lint-staged",
    "test": "jest --coverage",
    "prettier": "prettier --single-quote --trailing-comma \"es5\" --write \"./src/**/*.js\" ",
    "eslint": "eslint . --fix"
  },
  "lint-staged": {
    "linters": {
      "*.{js,json}": [
        "npm run prettier",
        "git add"
      ],
      "*.js": [
        "npm run eslint",
        "git add"
      ]
    },
    "concurrent": false
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/miage-lille/api-design.git"
  },
  "keywords": [
    "api"
  ],
  "author": "thaessle",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/miage-lille/api-design/issues"
  },
  "homepage": "https://github.com/miage-lille/api-design#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-watch": "^2.0.7",
    "env-cmd": "^7.0.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "jest": "^22.0.6",
    "lint-staged": "^6.0.0",
    "prettier": "^1.10.2",
    "prettier-eslint": "^8.7.4"
  },
  "dependencies": {
    "bcrypt": "^1.0.3",
    "express": "^4.16.2",
    "jwt-simple": "^0.5.1",
    "lodash": "^4.17.4",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.1",
    "pg": "^6.4.2",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.31.2",
    "sqlite3": "^3.1.13",
    "winston": "^3.0.0-rc1"
  }
}
